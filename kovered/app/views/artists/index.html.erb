<h1>Listing artists</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>City</th>
      <th>Country</th>
      <th>Band name</th>
      <th>Agree to privacy</th>
      <th>Subscription</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.first_name %></td>
        <td><%= artist.last_name %></td>
        <td><%= artist.gender %></td>
        <td><%= artist.date_of_birth %></td>
        <td><%= artist.city %></td>
        <td><%= artist.country_id %></td>
        <td><%= artist.band_name %></td>
        <td><%= artist.agree_to_privacy %></td>
        <td><%= artist.subscription %></td>
        <td><%= artist.user %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
