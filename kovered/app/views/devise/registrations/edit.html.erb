<% content_for :title, "Edit User" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal margin-none", :autocomplete => "off"}) do |f| %>
    <%= devise_error_messages! %>
    <%#= render 'layouts/error_messages', :object => @fan %>

    <!-- Widget -->
    <div class="widget">

      <!-- Widget heading -->
      <div class="widget-head">
        <h4 class="heading">Edit <%= resource_name.to_s.humanize %></h4>
      </div>
      <!-- // Widget heading END -->

      <!-- Tabs -->
      <div class="relativeWrap">
        <div class="box-generic">

          <!-- Tabs Heading -->
          <div class="tabsbar tabsbar-2">
            <ul class="row row-merge">
              <li class="col-md-4 glyphicons star"><a href="#tab1-4" data-toggle="tab"><i></i>Artist</a></li>
              <li class="col-md-4 glyphicons heart active">
                <%= link_to new_fan_path do %>
                    <i></i> <span>Music Lover</span>
                <% end %>

                <!--<a href="" data-toggle="tab"><i></i> <span>Music Lover</span></a>-->
              </li>
              <li class="col-md-4 glyphicons group">
                <a href="#tab3-4" data-toggle="tab"><i></i> <span>Industry Executive</span></a></li>
            </ul>
          </div>
          <!-- // Tabs Heading END -->

          <div class="tab-content">

            <!-- Tab content -->
            <div class="tab-pane active" id="tab1-4">
              <div class="widget-body innerAll inner-2x">

                <!-- Row -->
                <div class="row innerLR">

                  <!-- Column -->
                  <div class="col-md-5">

                    <!-- Group -->
                    <div class="form-group">
                      <%= f.label :username, :class => "col-md-4 control-label" %>
                      <div class="col-md-8">
                        <%= f.text_field :username, autofocus: true, :class => "form-control span8" %>
                      </div>
                    </div>
                    <!-- // Group END -->

                    <!-- Group -->
                    <div class="form-group">
                      <%= f.label :email, :class => "col-md-4 control-label" %>
                      <div class="col-md-8">
                        <%= f.email_field :email, autocomplete: "on", :class => "form-control span8" %>
                        <i class="text-info">(leave blank if you don't want to change it)</i>
                        <p class="has-error help-block"></p>
                      </div>
                    </div>
                    <!-- // Group END -->
                      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p class="text-warning">Currently waiting confirmation for: <span class="text-primary"><%= resource.unconfirmed_email %></span></p>
                      <% end %>
                      <div class="separator bottom"></div>



                  </div>
                  <!-- // Column END -->

                  <!-- Column -->
                  <div class="col-md-7">

                    <!-- Group -->
                    <div class="form-group">
                      <%= f.label :password, :class => "col-md-4 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :password, autocomplete: "off", :class => "form-control span8" %>
                      </div>
                      <% if @validatable %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                    </div>
                    <!-- // Group END -->

                    <!-- Group -->
                    <div class="form-group">
                      <%= f.label :password_confirmation, :class => "col-md-4 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control span8" %>
                      </div>
                    </div>
                    <!-- // Group END -->

                    <!-- Group -->
                    <div class="form-group">
                      <%= f.label :current_password, :class => "col-md-4 control-label" %>
                      <div class="col-md-8">
                        <%= f.password_field :current_password, autocomplete: "off", :class => "form-control span8" %>
                        <i class="text-info">(we need your current password to confirm your changes)</i>
                      </div>
                    </div>
                    <!-- // Group END -->

                  </div>
                  <!-- // Column END -->

                </div>
                <!-- // Row END -->

              <div class="separator"></div>

              <!-- Form Actions -->
              <div class="form-Actions">
                <!-- // Widget heading END -->

                <div class="widget-body center">
                  <%= f.submit "Update",:class=>"btn btn-success", :data => {:layout=>"top", :type=>"success"} %>
                  <%= link_to :back, class: "btn btn-default" do %>
                      <i class="fa fa-times"></i> Cancel
                  <% end %>
                </div>
              </div>

            </div>
            <!-- // Form Actions END -->

          </div>
        </div>
        <!-- // Widget END -->
      </div>
      <!-- // Tab content END -->
    </div>
    </div>
    <!-- // Tabs END -->

<% end %>


<!-- Widget -->
<div class="widget">

  <!-- Widget heading -->
  <div class="widget-head">
    <h4 class="heading">Terminating your Kovered360! Account </h4>
  </div>
  <!-- // Widget heading END -->

<!-- Row -->
<div class="bg-gray innerAll inner-2x">
  <div class="row">
    <!-- Column -->
    <div class="col-md-8">
      <h4>Before continuing, please consider the following information</h4>
      <p>By terminating this account, you will lose your Kovered360! ID and Profile names. </p>
      <p>We will also delete your account data and settings across the Kovered360! network</p>
    </div>
    <!-- // Column END -->
    <!-- Column -->
    <div class="col-md-4">
        <h4>We are sorry to see you go!</h4>
        <%= button_to registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" do %>
          <i class='fa fa-fw fa-trash-o'></i>Terminate this Account
        <% end %>
          <!--<a href="#modal-2" disabled="disabled" data-toggle="modal" class="btn btn-info"><i class="fa fa-fw fa-facebook"></i>Sign in with Facebook</a>-->
    </div>
    <!-- // Column END -->

  </div>
</div>
<!-- // Row END -->
</div>