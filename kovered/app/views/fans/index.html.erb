<h1>Listing fans</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>Fav genre</th>
      <th>Agree to privacy</th>
      <th>Subscription</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fans.each do |fan| %>
      <tr>
        <td><%= fan.first_name %></td>
        <td><%= fan.last_name %></td>
        <td><%= fan.gender %></td>
        <td><%= fan.date_of_birth %></td>
        <td><%= fan.address %></td>
        <td><%= fan.city %></td>
        <td><%= fan.country_id %></td>
        <td>
          <%fan.genres.each do |music_genre|%>
            <%= music_genre.name %>
              <br/>
          <%end%>
        </td>
        <td><%= fan.agree_to_privacy %></td>
        <td><%= fan.subscription %></td>
        <td><%= fan.user %></td>
        <td><%= link_to 'Show', fan %></td>
        <td><%= link_to 'Edit', edit_fan_path(fan) %></td>
        <td><%= link_to 'Destroy', fan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

